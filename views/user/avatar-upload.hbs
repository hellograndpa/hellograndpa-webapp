<div class="container">
  <div class="row">
    <div class="col s12 m4 l3">
      <div class="collection">
        <a href="/user/step-1" class="collection-item">Edit Profile</a>
        <a href="/user/avatar-upload" class="collection-item active">Photo Avatar </a>
        <a href="/user/step-3" class="collection-item">User Type</a>
      </div>
    </div>
    <div class="col s12 m8 l9 ">
      <h2>AVATAR - UPLOAD PHOTO </h2>

      <img src="{{user.avatar}}" alt="" width="300px" height="300px" class="circle center-align">


      <form action="/user/avatar-upload" enctype="multipart/form-data" method="post">
        <div class="col s12 m8 l8">
          <!-- Field to choose the files to be uploaded -->
          <div class="file-field input-field">
            <div class="btn">
              <span>File</span>
              <input type="file" name="upload" multiple />
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" placeholder="Upload one or more files">
            </div>
          </div>
        </div>
        <br>
        <div class="col s12 m4 l4">
          <button class="btn waves-effect waves-light" type="submit" name="action">UPLOAD IMAGE</button>
        </div>

      </form>
    </div>
  </div>
</div>