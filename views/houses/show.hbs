<div class="row">
  <div class="col s12 m12 12">
    {{#each house.photos}}
    <div class="col s12 m6 l3">
      <div class="card">
        <div class="card-image">
          <img src="{{ this }}" alt="">

        </div>

      </div>
    </div>
    {{/each}}
  </div>
</div>
<div class="container">
  <div class="row">

    <div class="col s12 m6 l8">
      <a href="/houses/">Back</a>
      <div class="housedetails">
      </div>
      <h1>House details</h1>
      <h3>{{house.title}}</h3>

      <h3>House specs:</h3>
      <ul class="housespecs">
        <li>Number of rooms: {{ house.rooms }}</li>
        <li>Meters: {{ house.m2 }}</li>
        <li>Address: {{ house.address.street }}</li>
        <li>{{ house.address.city }}</li>
        <li>{{ house.address.state }}</li>
        <li>{{ house.address.zip }}</li>

        <h4>Features:{{#each house.features}}</h4>
        <li>{{this}}</li>
        {{/each}}
        <h4>Electro:{{#each house.electro}}</h4>
        <li>{{this}}</li>
        {{/each}}

        <h4>Services included:{{#each house.sevicesincluded}}</h4>
        <li>{{this}}</li>
        {{/each}}
        <h4>Services to hoster:{{#each house.sevicestohoster}}</h4>
        <li>{{this.serviceType}}</li>
        <li>{{this.points}}</li>
        <li>is mandatory: {{this.mandatory}}</li>
        <li>is optional: {{this.requirement}}</li>
        <li>{{this.description}}</li>
        {{/each}}
      </ul>
      <h4>Restrictions:</h4>
      <p>{{ house.restricciones }}</p>

      <h3>Rent room:</h3>
      <ul>
        <li>M2: {{ house.rentroom.m2 }}</li>
        <li>Description {{ house.rentroom.description }}</li>
        <li>Wardrobes: {{ house.rentroom.wardrobes }}</li>
        <li>Window: {{ house.rentroom.window }}</li>
        <li>Balcony: {{ house.rentroom.balcony }}</li>
        <li>Heat: {{ house.rentroom.heat }}</li>
        <li>AC: {{ house.rentroom.ac }}</li>
        <li>WC: {{ house.rentroom.wc }}</li>
        <li>TV: {{ house.rentroom.tv }}</li>
        <li>Table: {{ house.rentroom.table }}</li>
        <li>Chair: {{ house.rentroom.chair }}</li>
        <li>Cost per month: {{ house.rentroom.costpermonth }}</li>
        <li>Other things: {{ house.rentroom.otherthings }}</li>
      </ul>

      <h3>Booking:</h3>
      <ul>
        <li>{{house.rentroom.booking}}</li>
      </ul>
      <h3>Reviews:{{#each house.rateandreview }}
        <li>{{this}}</li>
        {{/each}}
      </h3>

      <br>

      <h3>BOOK THIS HOUSE:</h3>
      Hi: {{currentUser.username.firstname}}<br />
      {{#if currentUser}}
      <form name="BookingForm" method="GET" action="/booking/{{house._id}}">
        <div>From when you whant to in?</div>
        <input type="month" id="dateIn" name="dateIn" min="2019-10" value="">
        <div>Until?</div>
        <input type="month" id="dateOut" name="dateOut" min="2019-10" value="">
        <input type="submit" value="Book!">
      </form>
      {{else}}
      <h3>Must be logged to book!</h3>
      {{/if}}

      <br /><br />


    </div>

    {{!--start the price and booking --}}
    <div class="col s12 m6 l4">
      <h3>User: {{house.user.username.firstname}}</h3>
    </div>
  </div>
</div>