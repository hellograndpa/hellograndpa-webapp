<div class="container">
  <div class="row">
    <div class="col s12 m4 l3">
      <div class="collection">
        <a href="/houses/create/step-1" class="collection-item active">Edit House</a>
        <a href="/houses/create/step-upload" class="collection-item ">House's photo </a>
        <a href="/houses/create/step-2" class="collection-item">About you house</a>
        <a href="/houses/create/step-3" class="collection-item">Services</a>
      </div>
      <a class="rounded waves-effect waves-light btn teal lighten-3 " href="/houses/{{house.id}}">PREVIEW THE HOUSE</a>
    </div>
    <div class="col s12 m8 l9">
      <div class="col s8">
        <h2>TELL US ABOUT YOUR HOUSE</h2> <br>
        <h5>SETP 1 OF 4</h5>
        <form id="form" action="/houses/create/step-1" method="POST">
          <div class="input-field col s12 m12 l12">
            <h5>ADDRESS</h5>
          </div>
          <div class="input-field col s12 m12 l12">
            <label for="street">Street</label><br>
            <input type="text" name="street" placeholder="{{ house.address.street }}"
              value="{{ house.address.street }}"><br>
          </div>
          <div class="input-field col s12 m12 l12">
            <label for="city">City</label>
            <input type="text" name="city" placeholder="{{ house.address.city }}" value="{{ house.address.city }}"><br>

          </div>
          <div class="input-field col s12 m12 l12">
            <label for="state">state</label>
            <input type="text" name="state" placeholder="{{ house.address.state }}"
              value="{{ house.address.state }}"><br>
          </div>
          <div class="input-field col s12 m12 l12">
            <label for="country">country</label>
            <input type="text" name="country" placeholder="{{ house.address.country }}"
              value="{{ house.address.country }}"><br>

          </div>
          <div class="input-field col s12 m12 l12">
            <label for="zip">Zip Code</label>
            <input type="text" name="zip" placeholder="{{ house.address.zip }}" value="{{ house.address.zip }}"><br>
          </div>
          <div class="input-field col s12 m12 l12">
            <button class="btn waves-effect waves-light" type="submit" name="action">SAVE MODIFICATIONS</button>
          </div>
        </form>

      </div>

    </div>
  </div>