<div class="container">
  <div class="row">
    <div class="col s12 m4 l3">
      <div class="collection">
        <a href="/houses/create/step-1" class="collection-item">Edit House</a>
        <a href="/houses/create/step-upload" class="collection-item ">House's photo </a>
        <a href="/houses/create/step-2" class="collection-item active">About you house</a>
        <a href="/houses/create/step-3" class="collection-item">Services</a>
      </div>
      <a class="rounded waves-effect waves-light btn teal lighten-3 " href="/houses/{{house.id}}">PREVIEW THE HOUSE</a>
    </div>
    <div class="col s12 m8 l9">
      <h2>HOUSE DESCRIPTIONS</h2> <br>
      <h5>SETP 3 OF 4</h5>
      <form id="form" action="/houses/create/step-2" method="POST">
        <div class=" col s12 m12 l12">
          <h5>Title of your house</h5>
          <input type="text" name="title" placeholder="title" value="{{house.title}}">
        </div>
        <div class=" col s12 m12 l12">
          <div class="input-field col s12 m4 l3">
            <h5>M2 house</h5>

            <input type="text" name="house-m2" placeholder="house-m2" value="">
          </div>
          <div class="input-field col s12 m12 l9">
            <h5>Number of rooms</h5>
            <div class="input-field col s6 m3 l2">
              <label><input type="radio" name="rooms" value="1" checked> <span>1</span> </label><br>
            </div>
            <div class="input-field col s6 m3 l2">
              <label><input type="radio" name="rooms" value="2"> <span>2</span> </label><br>
            </div>
            <div class="input-field col s6 m3 l2">
              <label><input type="radio" name="rooms" value="3"> <span>3</span></label><br>
            </div>
            <div class="input-field col s6 m3 l2">
              <label><input type="radio" name="rooms" value="4"> <span>+ 4</span></label><br>
            </div>
          </div>
        </div>
        <br>
        <br>

        <label for="description">Description</label><br>
        <textarea class="materialize-textarea" name="description">{{house.description}}</textarea><br>
        <div class="input-field col s12 m12 l12">
          <h5>Features</h5>
          {{#each featuresArray}}
          <div class="input-field col s6 m3 l3">
            <label><input type="checkbox" name="features" value="{{this}}"> <span>{{this}}</span></label>
          </div>
          {{/each}}
        </div>
        <div class="input-field col s12 m12 l12">
          <h5>Electro</h5>
          {{#each electroArray}}
          <div class="input-field col s6 m3 l3">
            <label><input type="checkbox" name="electro" value="{{this}}"> <span>{{this}} </span></label>
          </div>
          {{/each}}
        </div>

        <div class="input-field col s12 m12 l12">
          <h5>Services Included</h5>
          {{#each sevicesIncludedArray}}
          <div class="input-field col s6 m3 l3">
            <label><input type="checkbox" name="sevicesincluded" value="{{this}}"> <span>{{this}}</span></label>
          </div>
          {{/each}}
        </div>
        <div class="input-field col s12 m12 l12">
          <h4> && THE ROOM</h4>
          <div class="input-field col s6 m3 l4">
            <label for="roomm2">M2 Room</label>
            <input type="text" name="room-m2" placeholder="000" value="">
          </div>
          <div class="input-field col s6 m3 l4">
            <label for="wardrobes">wardrobes</label>
            <div class="input-field col s12 m12 l12">
              <label><input type="radio" name="wardrobes" value="uno"> <span>uno</span></label>
            </div>
            <div class="input-field col s12 m12 l12">
              <label><input type="radio" name="wardrobes" value="dos"> <span>dos</span></label>
            </div>
          </div>
          <div class="input-field col s6 m3 l4">
            <label>window</label>
            <div class="input-field col s12 m12 l12">
              <label><input type="radio" name="window" value="uno"> <span>uno</span></label>
            </div>
            <div class="input-field col s12 m12 l12">
              <label><input type="radio" name="window" value="dos"> <span>dos</span></label>
            </div>
          </div>
          <div class="input-field col s6 m3 l4">
            <label>wc</label>
            <div class="input-field col s12 m12 l12">
              <label><input type="radio" name="wc" value="private bathroom"> <span>private bathroom</span></label>
            </div>
            <div class="input-field col s12 m12 l12">
              <label><input type="radio" name="wc" value="share bathroom"> <span>share bathroom</span></label>
            </div>
          </div>
          <div class="input-field col s6 m3 l3">
            <label><input type="checkbox" name="balcony" value="true"> <span>have a balcony</span></label>
          </div>
          <div class="input-field col s6 m3 l3">
            <label><input type="checkbox" name="heat" value="true"> <span>have a heat</span></label>
          </div>
          <div class="input-field col s6 m3 l3">
            <label><input type="checkbox" name="ac" value="true"> <span>have a ac</span></label>
          </div>
          <div class="input-field col s6 m3 l3">
            <label><input type="checkbox" name="tv" value="true"> <span>have a tv</span></label>
          </div>
          <div class="input-field col s6 m3 l3">
            <label><input type="checkbox" name="table" value="true"> <span>have a tabe</span></label>
          </div>
          <div class="input-field col s6 m3 l3">
            <label><input type="checkbox" name="chair" value="true"> <span>have a chair</span></label>
          </div>

          <div class="input-field col s12 m12 l12">
            <br>
            <br>
            {{ house.othersThings }}
            <label for="othersThings">Others Things</label>
            <textarea class="materialize-textarea" rows="5" cols="33"
              name="othersThings">{{ house.rentroom.othersThings }}</textarea>
          </div>

        </div>
        <div class="input-field col s12 m12 l12">
          <button class="btn waves-effect waves-light" type="submit" name="action">SAVE MODIFICATIONS</button>
        </div>
      </form>
    </div>
  </div>
</div>