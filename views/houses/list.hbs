<h1>List of available houses</h1>
<div style="display:flex; justify-content:center; flex-wrap: wrap;">

    <div class="row">
        {{#each houses}}


        <div class="col s12 m3">
            <div class="card">
                <div class="card-image">
                    <a href="
                    /houses/{{this._id}}"><img src="/images/pictures/photo1.jpg"></a>
                    <span class="card-title">Card Title</span>
                    <a class="btn-floating halfway-fab waves-effect waves-light red" href="/houses/{{this._id}}"><i
                            class="material-icons">add</i></a>
                </div>
                <div class="card-content">
                    <p>user: {{this.user.username.firstname}} {{this.user.username.lastname}}</p>
                    <div>rooms: {{ this.rooms }}</div>
                    <div>m2: {{ this.m2 }}</div>
                </div>
            </div>
        </div>

        {{/each}}
    </div>

</div>