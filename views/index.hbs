    <div class="row">
        <div class="col s4 m6 offset-m2 l4 offset-l4 card-panel  search-home ">
            <form method="GET" action="/houses">
                <div class=" col s12 m4 l4">
                    <div class="input-field imputfield-search-margin ">
                        <select name="city">
                            <option value="" disabled selected>Where?</option>
                            {{#each cities}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                            </option>
                        </select>
                    </div>
                </div>
                <div class=" col s12 m4 l4">
                    <div class="input-field imputfield-search-margin ">
                        <select name="month">
                            <option value="" disabled selected>When ?</option>
                            <option value="January">January</option>
                            <option value="February">February</option>
                            <option value="March">March</option>
                        </select>

                    </div>
                </div>
                <div class="col s12 m4 l4 ">
                    <button class="btn waves-effect waves-light btm-search-margin" type="submit" name="action">Buscar
                        <i class="material-icons right">send</i>
                    </button>
                </div>


            </form>
        </div>
    </div>
</div>
